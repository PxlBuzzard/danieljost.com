---title: games---{% include header.html %}<h1 class="text_top">Games</h1><div class="game_list">  {% for game in site.data.games %}  <div class="subgame">    {% if game.link %}    <a href="{{ game.link }}" target="_blank">    {% endif %}    <img src="/img/thumb/game/{{ game.thumb }}" class="subgame_img" alt="{{ game.name }}" />    <h2 class="subgame_header">{{ game.name }}</h2>    {% if game.link %}    </a>    {% endif %}    <p class="subgame_text">{{ game.short_desc }}</p>  </div>  {% endfor %}</div>{% include footer.html %}